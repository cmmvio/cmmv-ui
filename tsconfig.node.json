{
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*"
	],
	"compilerOptions": {
		"composite": true,
		"noEmit": true,
        "noImplicitAny": false,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@composables/*": ["src/composables/*"],
            "@mixins/*": ["src/mixins/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"]
        },
		"types": ["node"]
	}
}
