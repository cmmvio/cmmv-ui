{
    "name": "@cmmv/ui",
    "version": "0.1.3",
    "description": "Vue3 UI Component + TailwindCSS 4 for CMMV",
    "license": "MIT",
    "author": "Andre Ferreira",
    "private": false,
    "scripts": {
        "clean": "rimraf dist",
        "clean:server": "./clean_dist.sh",
        "dev": "vite",
        "build": "pnpm run clean && pnpm run build:module",
        "build:module": "vite build --mode module && pnpm run clean:server",
        "build:docs": "export NODE_ENV=production && pnpm run clean && pnpm run type-check && vite build --mode docs",
        "preview": "export NODE_ENV=production && vite preview",
        "test": "vitest",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "release": "pnpm run build:module && pnpm run clean:server && node ./release.js",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "prepare": "husky"
    },
    "files": [
        "dist",
        "src"
    ],
    "keywords": [
        "cmmv",
        "ui",
        "vue",
        "components"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cmmvio/cmmv-ui.git"
    },
    "bugs": {
        "url": "https://github.com/cmmvio/cmmv-ui/issues"
    },
    "homepage": "https://github.com/cmmvio/cmmv-ui#readme",
    "type": "module",
    "main": "dist/cmmv-ui.cjs.js",
    "module": "dist/cmmv-ui.es.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/cmmv-ui.es.js",
            "require": "./dist/cmmv-ui.cjs.js"
        }
    },
    "lint-staged": {
        "**/*.{ts,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@cmmv/cli": "^0.7.4",
        "@tsconfig/node22": "^22.0.0",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.13.5",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "chalk": "^5.4.1",
        "conventional-changelog": "^6.0.0",
        "conventional-changelog-cli": "^5.0.0",
        "enquirer": "^2.4.1",
        "execa": "^9.5.2",
        "husky": "^9.1.7",
        "jsdom": "^25.0.1",
        "rimraf": "^6.0.1",
        "semver": "^7.7.1",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.6.3",
        "unplugin-vue-components": "^0.27.5",
        "vite": "^6.2.0",
        "vite-plugin-dts": "^4.5.1",
        "vite-plugin-vue-devtools": "^7.7.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^2.1.9",
        "vue-tsc": "^2.2.4"
    },
    "dependencies": {
        "@cmmv/core": "^0.8.26",
        "@cmmv/http": "^0.8.26",
        "@cmmv/view": "^0.8.26",
        "@heroicons/vue": "^2.2.0",
        "@vueuse/core": "^12.7.0",
        "chart.js": "^4.4.8",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.7",
        "fast-glob": "^3.3.3",
        "fast-json-stringify": "^6.0.1",
        "fs-extra": "^11.3.0",
        "glob": "^11.0.1",
        "highlight.js": "^11.11.1",
        "json5": "^1.0.2",
        "lodash": "4.17.21",
        "markdown-it": "^14.1.0",
        "marked": "^15.0.7",
        "moment": "2.29.4",
        "path-to-regexp": "0.1.12",
        "postcss-nesting": "^13.0.1",
        "qs": "6.5.3",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20",
        "vite-plugin-css-injected-by-js": "^3.5.2",
        "vue": "^3.5.13",
        "vue-highlightjs": "^1.3.3",
        "vue-i18n": "^10.0.5",
        "vue-router": "^4.5.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@swc/core",
            "esbuild",
            "protobufjs"
        ]
    }
}
